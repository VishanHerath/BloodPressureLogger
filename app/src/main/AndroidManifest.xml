<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.kdu.pulze">

    <application
        android:allowBackup="true"
        android:fullBackupContent="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Pulze">
        <activity
            android:parentActivityName="lk.kdu.pulze.MainActivity"
            android:name="lk.kdu.pulze.SettingsActivity"
            android:label="@string/title_activity_settings" />
        <activity
            android:name="lk.kdu.pulze.SplashActivity"
            android:theme="@style/SplashScreenTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="lk.kdu.pulze.MainActivity"
            android:windowSoftInputMode="adjustResize" />
    </application>

</manifest>